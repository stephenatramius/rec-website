extends include/templates/layout

block vars
    - var header_transparent = true;

append css

append content

    // Hero
    section.module-cover.parallax.text-center(data-background="assets/images/module-3.jpg" data-overlay="0.5")
        .container

            .row
                .col-md-12
                    h1 We are a creative agency <br>based in New York
                    p Creating digital products for creative people
    // Hero end

    = "\n"

    // About
    section.module
        .container

            .row.align-items-center
                .col-lg-6
                    p.m-b-30: img(src="assets/images/main/about-4.jpg" alt="")

                .col-lg-5.offset-lg-1
                    h2 Easy and Simple.
                    p.lead See how your users experience your website in realtime or view trends to see any changes in performance.
                    ul.arrow-list
                        li Web Design
                        li Web Applications
                        li Digital Strategy
                        li Information Architecture
                        li Copywriting

            .row
                .col-md-12
                    hr.m-t-40.m-b-30

            .row
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-layout-media-left", "Mega Menus", "See how your users experience your website in realtime or view trends to see any changes in performance.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-desktop", "Fully Responsive", "See how your users experience your website in realtime or view trends to see any changes in performance.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-face-smile", "Friendly Support", "See how your users experience your website in realtime or view trends to see any changes in performance.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-marker-alt", "Trendy Design", "See how your users experience your website in realtime or view trends to see any changes in performance.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-star", "User Experience", "See how your users experience your website in realtime or view trends to see any changes in performance.")
                .col-lg-4.col-md-6
                    +iconBoxLeft("ti-layout-sidebar-right", "Sidebars", "See how your users experience your website in realtime or view trends to see any changes in performance.")

    = "\n"

    // Counters
    section.module.parallax(data-background="assets/images/module-1.jpg" data-overlay="0.5")
        .container

            .row
                .col-md-3
                    +Counter("Happy Clients", "1538")
                .col-md-3
                    +Counter("Happy Clients", "2124")
                .col-md-3
                    +Counter("Happy Clients", "3128")
                .col-md-3
                    +Counter("Happy Clients", "9534")
    // Counters end

    = "\n"

    // About
    section.module
        .container

            .row
                .col-lg-6.col-md-9.m-auto.text-center
                    h1 Digital Design.
                    p.lead See how your users experience your website in realtime or view trends to see any changes in performance over time.

            .row
                .col-md-12
                    .space(data-MY="60px")

            .row
                .col-md-8
                    p: img(src="assets/images/main/about-1.jpg" alt="" class="img-shadow")
                .col-md-4
                    p: img(src="assets/images/main/about-2.jpg" alt="" class="img-shadow")

            .row
                .col-md-12
                    .space(data-MY="40px")

            .row
                .col-md-4
                    .number-box
                        h6.number-box-header
                            span.number-box-number 01
                            span.number-box-title Development
                        .number-box-content
                            p See how your users experience your website in realtime or view trends to see any changes in performance over time.
                .col-md-4
                    .number-box
                        h6.number-box-header
                            span.number-box-number 02
                            span.number-box-title Branding
                        .number-box-content
                            p See how your users experience your website in realtime or view trends to see any changes in performance over time.
                .col-md-4
                    .number-box
                        h6.number-box-header
                            span.number-box-number 03
                            span.number-box-title Web Design
                        .number-box-content
                            p See how your users experience your website in realtime or view trends to see any changes in performance over time.
    // About end

    = "\n"

    // Testimonials
    section.module.parallax(data-background="assets/images/module-4.jpg" data-overlay="0.5")
        .container

            .row
                .col-md-12
                    .space(data-MY="60px")

            .row
                .col-md-12
                    .review-slides.owl-carousel
                        +TestimonialsSlider("Albert Einstein", "I don't work from drawings. I don't make sketches and drawings <br/> and color sketches into a final painting.")
                        +TestimonialsSlider("Ralph Waldo Emerson", "To be yourself in a world that is constantly trying to make you <br/> something else is the greatest accomplishment.")
                        +TestimonialsSlider("Marilyn Monroe", "Imperfection is beauty, madness is genius and it's better to be <br/> absolutely ridiculous than absolutely boring.")

            .row
                .col-md-12
                    .space(data-MY="60px")
    // Testimonials end

    = "\n"

    // Team
    section.module
        .container

            .row
                .col-lg-6.col-md-9.m-auto.text-center
                    h1 Creative People.
                    p.lead See how your users experience your website in realtime or view trends to see any changes in performance over time.

            .row
                .col-md-12
                    .space(data-MY="60px")

            .row
                .col-lg-4.col-md-6
                    +team("assets/images/team/1.jpg", "Emma Connor", "Designer")
                .col-lg-4.col-md-6
                    +team("assets/images/team/2.jpg", "Richard Bauer", "Developer")
                .col-lg-4.col-md-6
                    +team("assets/images/team/3.jpg", "John Pope", "Founder")
                .col-lg-4.col-md-6
                    +team("assets/images/team/4.jpg", "Sara Smith", "Designer")
                .col-lg-4.col-md-6
                    +team("assets/images/team/5.jpg", "Emma Connor", "Developer")
                .col-lg-4.col-md-6
                    +team("assets/images/team/6.jpg", "Peter Chapman", "Founder")

            .row
                .col-md-12
                    .space(data-MY="30px")

            .row
                .col-md-12
                    p.text-center: a(href="#" class="btn btn-circle btn-outline-brand") Services
    // Team end

    = "\n"

    // Clients
    section.module.bg-gray.p-b-0
        .container

            .row
                .col-md-10.m-auto
                    .owl-carousel.clients-carousel
                        .client
                            img(src="assets/images/clients/1.png" alt="")
                        .client
                            img(src="assets/images/clients/2.png" alt="")
                        .client
                            img(src="assets/images/clients/3.png" alt="")
                        .client
                            img(src="assets/images/clients/4.png" alt="")
                        .client
                            img(src="assets/images/clients/5.png" alt="")
                        .client
                            img(src="assets/images/clients/6.png" alt="")
                        .client
                            img(src="assets/images/clients/7.png" alt="")
    // Clients end

    = "\n"

    // Image
    section.module.no-gutters.p-0
        .container-fluid

            .row
                .col-md-12
                    img(src="assets/images/module-18.jpg" alt="")
    // Image end