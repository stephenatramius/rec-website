//- Alert
//------------------------------------------------------------------

mixin Alert(classa)
    .alert(class=classa)
        | #[strong Heads up!] This alert needs #[a(href="#" class="alert-link") your attention], but it's not super important.

//------------------------------------------------------------------
//- Testimonials
//------------------------------------------------------------------

mixin TestimonialsSlider(name, content, icon)

    if (typeof icon === 'undefined')
        - icon = ''

    .review
        .review-icons
            if icon
                h2.ti-comment-alt
            else
                img(src="assets/images/avatar/1.jpg" alt="")
        .review-content
            blockquote
                p!=content
                footer.blockquote-footer=name

mixin TestimonialsCard(name, content, image)
    .review-card
        .review-card-content
            p=content
        .review-card-author
            .review-card-author-photo
                img(src=image alt="")
            .review-card-author-info
                h6.review-card-author-title= name
                span.star-rating
                    i.fas.fa-star
                    i.fas.fa-star
                    i.fas.fa-star
                    i.fas.fa-star
                    i.far.fa-star

//------------------------------------------------------------------
//- Features
//------------------------------------------------------------------

mixin Feature(thumb, title, content)
    .feature
        .feature-thumb
            img(src=thumb alt="")
        .feature-content
            h6=title
            p=content
            a(href="#" class="feature-link") Read more

//------------------------------------------------------------------
//- Pricing Table
//------------------------------------------------------------------

mixin pricing(title, price, type, icon)
    if type
        - var class_type = "pricing-popular"
    .col-md-4.pricing-wrapper( class = class_type )
        .pricing-header
            if icon
                .pricing-icon
                    i( class = icon )
            .pricing-title= title
        .pricing-price
            if type
                span $
            = price
        .pricing-body
            p Map where your photos<br>were taken and discover local<br>points of interest.
        .pricing-footer
            a(href="#" class="btn btn-circle btn-brand") Download

//------------------------------------------------------------------
//- Shop Grid Item
//------------------------------------------------------------------

mixin ShopGridItem(thumb, title, price)
    .shop-grid-item
        .shop-item-thumb
            a(href="#")
                img(src=thumb alt="")
            .shop-item-hidden
                a(href="#" class="btn btn-new-white") Add to cart
        .shop-item-captions
            h6.shop-item-title=title
            span.shop-item-price=price

//------------------------------------------------------------------
//- Shop Cart item
//------------------------------------------------------------------

mixin CreateCartItem(image, title, price)
    tr
        td
            a(href='#')
                img.cart-thumbnail(src=image alt="")
        td
            h6.m-b-0
                a(href='#')= title
            p: small Color: black | Size: 36.5
        td
            = price
        td
            input.form-control(type="number", step="1", min="1", value="1")
        td
            = price
        td.cart-remove
            a(href='#')
                i.ti-close