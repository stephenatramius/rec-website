//------------------------------------------------------------------
//- Counters
//------------------------------------------------------------------

mixin Counter(title, number, icon)
    .counter
        if icon
            .counter-icon
                span(class=icon)
        .counter-number
            h6: strong.counter-timer(data-from="0" data-to=number) 0
        .counter-title= title

//------------------------------------------------------------------
//- Progress Bars
//------------------------------------------------------------------

mixin Progress(title, counter, color)
    .progress-item
        .progress-title
            h6
                =title
                span.float-right
                    span.progress-number
                    | %
        .progress
            .progress-bar(class=color aria-valuenow=counter aria-valuemin="0" aria-valuemax="100")

//------------------------------------------------------------------
//- Pie Chart
//------------------------------------------------------------------

mixin PieChart(title, counter)
    .pie-chart
        .chart(data-percent=counter)
            span.chart-text
                span: i.icons.icon-magic-wand
        .chart-title
            h6=title
        .chart-content
            p Map where your photos were taken and discover local points of interest. Map where your photos.

//------------------------------------------------------------------
//- Team
//------------------------------------------------------------------

mixin team(image, name, role)
    .team-item
        .team-image
            img(src=image alt="")
            .team-wrap
                .team-content
                    h6.team-name= name
                    .team-role= role
                .team-content-social
                    ul
                        li: a(href="#") #[i.fab.fa-twitter]
                        li: a(href="#") #[i.fab.fa-instagram]
                        li: a(href="#") #[i.fab.fa-pinterest-p]

//------------------------------------------------------------------
//- Portfolio
//------------------------------------------------------------------

mixin PortfolioItem(image, title, filter, category)
    .portfolio-item(class = filter)
        .portfolio-item-wrapper
            .portfolio-item-img
                img(src = image alt="")
            .portfolio-item-caption
                h6.portfolio-item-title= title
                span.portfolio-item-subtitle.serif= category
            a.portfolio-item-link(href="portfolio-single-1.html")

//------------------------------------------------------------------
//- Icon Box Left
//------------------------------------------------------------------

mixin IconBox(icon, title, content, align, link)
    if (typeof align === 'undefined')
        - align = ''

    .icon-box(class=align)
        .icon-box-icon
            span(class=icon)
        .icon-box-title
            h6= title
        .icon-box-content
            p!= content
        if (link == true)
            .icon-box-link
                a(href="#") Read more

mixin iconBoxLeft(icon, title, content)
    .icon-box.icon-box-left
        .icon-box-icon
            span(class=icon)
        .icon-box-title
            h6= title
        .icon-box-content
            p!= content

