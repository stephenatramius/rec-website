extends include/templates/layout

block vars
    - var header_transparent = true;

append css

append content

    // Hero
    section.module-cover.parallax.text-center(data-background="assets/images/module-22.jpg" data-overlay="0.2")
        .container

            .row
                .col-md-12
                    h1 Spacé Đecor
                    ol.breadcrumb.justify-content-center
                        li.breadcrumb-item: a(href="#") Home
                        li.breadcrumb-item: a(href="#") Portfolio
                        li.breadcrumb-item.active Sidebar Slides
    // Hero end

    = "\n"

    // Portfolio Single
    section.module
        .container

            .row
                .col-md-8
                    .image-slider.owl-carousel
                        img(src="assets/images/portfolio/6.jpg" alt="")
                        img(src="assets/images/portfolio/5.jpg" alt="")
                        img(src="assets/images/portfolio/4.jpg" alt="")
                        img(src="assets/images/portfolio/3.jpg" alt="")
                .col-md-4
                    .sticky-sidebar
                        h6.single-portfolio-title Spacé Decor
                        p Just then her head struck against the roof of the hall in fact she was now more than nine feet high and she at once took up the little golden key and hurried off to the garden door.
                        p Just then her head struck against the roof of the hall in fact she was now more than nine feet high and she at once took up.

                        hr.m-t-30.m-b-30

                        .info-list
                            li
                                span.info-list-title Date:
                                span 10 October, 2018
                            li
                                span.info-list-title Client:
                                span #[a(href="#") 2theme Team]
                            li
                                span.info-list-title Category:
                                span #[a(href="#") Development]
                            li
                                span.info-list-title Demo:
                                span #[a(href="#") 2the.me]

                        hr.m-t-30.m-b-30

                        .info-list
                            li
                                span.info-list-title Share:
                                span
                                    ul.social-icons
                                        li: a(href="#") #[i.ti-twitter]
                                        li: a(href="#") #[i.ti-instagram]
                                        li: a(href="#") #[i.ti-pinterest]
